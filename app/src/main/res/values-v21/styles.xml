<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary_500</item>
        <item name="colorPrimaryDark">@color/primary_700</item>
        <item name="android:windowBackground">@color/primary_100</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="colorControlNormal">@color/primary_500</item>
        <item name="colorControlActivated">@color/accent_700</item>
        <item name="colorControlHighlight">@color/accent_500</item>
        <!-- colorAccent is used as the default value for colorControlActivated,
         which is used to tint widgets -->
        <item name="colorAccent">@color/accent_500</item>
    </style>

</resources>
