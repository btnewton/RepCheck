<?xml version="1.0" encoding="utf-8"?>
<!-- Universal Styles -->
<resources>

    <style name="toolbar_style" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:textColorPrimary">@color/accent_500</item>
        <item name="android:textColorSecondary">@color/accent_500</item>
        <item name="colorAccent">@color/accent_500</item>
        <item name="android:textColor">@color/accent_500</item>
    </style>

    <style name="Widget.MyApp.ActionBar" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/primary_800</item>
        <item name="android:textColorPrimary">@color/accent_500</item>
        <item name="android:textColorSecondary">@color/accent_500</item>
        <item name="colorAccent">@color/accent_500</item>
        <item name="android:textColor">@color/accent_500</item>
        <item name="theme">@style/ThemeOverlay.MyApp.ActionBar</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
    </style>

    <style name="ThemeOverlay.MyApp.ActionBar" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:textColorPrimary">@color/accent_500</item>
        <item name="android:textColorSecondary">@color/accent_500</item>
        <item name="colorAccent">@color/accent_500</item>
        <item name="android:textColor">@color/accent_500</item>
    </style>


    <style name="base_floatingActionButton" parent="Theme.AppCompat.NoActionBar">
        <item name="android:background">@drawable/circle</item>
    </style>

    <style name="smallFloatingActionButton" parent="base_floatingActionButton">
        <item name="android:padding">@dimen/small</item>
        <item name="android:layout_width">@dimen/small_fab_size</item>
        <item name="android:layout_height">@dimen/small_fab_size</item>
    </style>

    <style name="regularFloatingActionButton" parent="base_floatingActionButton">
        <item name="android:padding">@dimen/small</item>
        <item name="android:layout_width">70dp</item>
        <item name="android:layout_height">70dp</item>
    </style>

    <style name="UndoBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/undobar_height</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:layout_marginBottom">@dimen/standard</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:background">@color/primary_700</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="UndoBarMessage">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/standard</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_marginRight">@dimen/standard</item>
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
        <item name="android:textColor">@color/primary_400 </item>
    </style>

    <style name="UndoBarButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingLeft">@dimen/standard</item>
        <item name="android:paddingRight">24dp</item>
        <item name="android:background">@color/primary_700</item>
        <item name="android:gravity">center</item>
        <item name="android:drawablePadding">12dp</item>
        <item name="android:textAppearance">?android:textAppearanceSmall</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/accent_500</item>
        <item name="android:text">@string/undo</item>
    </style>

    <style name="resume_btn" parent="smallFloatingActionButton">
        <item name="android:src">@drawable/ic_document</item>
        <item name="android:tint">@color/accent_500</item>
        <item name="android:contentDescription">@string/resume</item>
    </style>

    <style name="website_btn" parent="smallFloatingActionButton">
        <item name="android:src">@drawable/ic_globe</item>
        <item name="android:tint">@color/accent_500</item>
        <item name="android:contentDescription">@string/website</item>
    </style>

    <style name="email_btn" parent="smallFloatingActionButton">
        <item name="android:src">@drawable/ic_mail</item>
        <item name="android:tint">@color/accent_500</item>
        <item name="android:contentDescription">@string/email</item>
    </style>

    <style name="dialog_title">
        <item name="android:paddingTop">24dp</item>
        <item name="android:paddingLeft">24dp</item>
        <item name="android:paddingRight">24dp</item>
        <item name="android:paddingBottom">20dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">22sp</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
</resources>
