<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_margin="@dimen/standard"
        android:id="@+id/weight_input_wrapper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/quick_subtract"
            android:textColor="@color/accent_500"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/detail"
            android:layout_marginStart="@dimen/standard"
            android:layout_marginEnd="@dimen/standard"
            android:selectAllOnFocus="true"
            android:gravity="center"
            android:maxLength="6"
            android:inputType="numberDecimal"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/quick_add"
            android:textColor="@color/accent_500"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:layout_below="@id/weight_input_wrapper"
        android:layout_marginBottom="@dimen/standard"
        android:id="@+id/rep_input_wrapper"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/set_name"
            android:scrollHorizontally="true"
            android:ellipsize="end"
            android:maxLines="1"
            android:layout_width="0dp"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:textSize="18sp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <Spinner
                android:layout_marginStart="@dimen/standard"
                android:layout_marginEnd="@dimen/standard"
                android:layout_gravity="end"
                android:id="@+id/rep_spinner"
                android:layout_width="100dp"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>

    <ListView
        android:layout_below="@id/rep_input_wrapper"
        android:id="@+id/list_view"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"/>

    <ViewStub
        android:id="@android:id/empty"
        android:layout_below="@id/rep_input_wrapper"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="center"
        android:layout="@layout/empty_list" />

    <!-- May be either v15 or v21 Floating Action Button-->
    <include layout="@layout/floating_action_button" />

    <LinearLayout
        android:id="@+id/undobar_wrapper"
        android:layout_alignParentBottom="true"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <include layout="@layout/undo_toast"/>

    </LinearLayout>

</RelativeLayout>