<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/tutorial_dialog"
    android:background="@color/primary_700_alpha"
    android:layout_alignParentBottom="true"
    android:padding="@dimen/standard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/tutorial_title"
        android:textSize="@dimen/larger_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/tutorial_close"
        android:tint="@color/accent_500"
        android:layout_marginTop="-6dp"
        android:layout_alignParentRight="true"
        android:src="@drawable/ic_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <com.brandtnewtonsoftware.rep_check.util.ClickableViewPager
        android:id="@+id/tutorial_viewpager"
        android:layout_below="@id/tutorial_title"
        android:layout_width="match_parent"
        android:layout_height="120dp" />

    <ProgressBar
        android:id="@+id/tutorial_progress"
        android:progressDrawable="@drawable/tutorial_progressbar"
        android:layout_below="@id/tutorial_viewpager"
        android:layout_height="2dp"
        android:layout_width="match_parent"
        style="@android:style/Widget.ProgressBar.Horizontal" />
</RelativeLayout>