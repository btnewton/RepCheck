<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/undobar"
    style="@style/UndoBar">
    <TextView android:id="@+id/undobar_message" style="@style/UndoBarMessage" />
    <View
        android:layout_width="1dp"
        android:layout_height="fill_parent"
        android:paddingTop="@dimen/tiny"
        android:paddingBottom="@dimen/tiny"
        android:background="@android:color/darker_gray"
        android:layout_marginTop="@dimen/tiny"
        android:layout_marginBottom="@dimen/tiny" />
    <Button android:id="@+id/undobar_button" style="@style/UndoBarButton" />
</LinearLayout>